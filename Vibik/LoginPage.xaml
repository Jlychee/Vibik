<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vibik.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="64,129,64,0" BackgroundColor="{StaticResource NavySeal}" Orientation="Vertical">
            <Label Text="ВХОД"
                   FontSize="32"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Padding="0,0,0,74"/>
            
            <Grid RowDefinitions="Auto,1">
                <StackLayout Orientation="Horizontal"
                             Spacing="12"
                             VerticalOptions="Center">
                    <Image Source="login_icon.png"
                           WidthRequest="24"
                           HeightRequest="24"
                           VerticalOptions="Center" />
                    <Entry x:Name="UsernameEntry"
                           Placeholder="Логин"
                           FontSize="20"
                           TextColor="Black"
                           PlaceholderColor="#A3A3A3"
                           BackgroundColor="Transparent"
                           ClearButtonVisibility="WhileEditing" />
                </StackLayout>

                <BoxView Grid.Row="1"
                         HeightRequest="1.5"
                         Color="Black"
                         WidthRequest="260"/>
            </Grid>
            
            <Grid RowDefinitions="Auto,1">
                <StackLayout Orientation="Horizontal"
                             Spacing="12"
                             VerticalOptions="Center">
                    <Image Source="passoword_icon.png"
                           WidthRequest="24"
                           HeightRequest="24"
                           VerticalOptions="Center" />
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Пароль"
                           IsPassword="True"
                           FontSize="20"
                           TextColor="Black"
                           PlaceholderColor="#A3A3A3"
                           BackgroundColor="Transparent"
                           ClearButtonVisibility="WhileEditing" />
                </StackLayout>

                <BoxView Grid.Row="1"
                         HeightRequest="1.5"
                         Color="Black"
                         WidthRequest="260" />
            </Grid>

            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False"
                   Margin="0,10,0,0" />

            <Button Text="Войти"
                    Clicked="OnLoginClicked"
                    Margin="0,60,0,0"
                    HeightRequest="60"
                    CornerRadius="18"
                    BackgroundColor="{StaticResource MilkChocolate}"
                    TextColor="White"
                    FontSize="20"
                    HorizontalOptions="FillAndExpand">
                <Button.Shadow>
                    <Shadow Radius="8"
                            Opacity="0.4" />
                </Button.Shadow>
            </Button>
            <Button Text="Зарегистрироваться"
                    Clicked="OnRegisterClicked"
                    Margin="0,60,0,0"
                    HeightRequest="60"
                    CornerRadius="18"
                    BackgroundColor="{StaticResource NavySeal}"
                    TextColor="Black"
                    FontSize="18"
                    HorizontalOptions="FillAndExpand">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>