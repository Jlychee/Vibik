<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Vibik.Resources.Components"
             x:Class="Vibik.Resources.Components.TaskCard"
             x:Name="Root"
             x:DataType="components:TaskCard">
    
    <Frame BackgroundColor="{DynamicResource MilkChocolate}"
           Padding="16"
           CornerRadius="11"
           HasShadow="True">
        <Grid ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto,Auto"
              ColumnSpacing="14"
              RowSpacing="8">
            <!-- Левая иконка (рамка + кружок) -->
            <Grid Grid.RowSpan="2" Grid.Column="0" WidthRequest="48" HeightRequest="48">
                <Border Stroke="{StaticResource MilkChocolate}"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 12"
                        Background="Transparent" />
                <Ellipse Stroke="{StaticResource MilkChocolate}"
                         StrokeThickness="2"
                         WidthRequest="16"
                         HeightRequest="16"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
            </Grid>

            <!-- Контент слева -->
            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="4">
                <Label Text="{Binding Title}"
                       FontSize="18" FontAttributes="Bold"
                       TextColor="{DynamicResource White}" />
                <Label Text="{Binding DaysPassedText}"
                       FontSize="12"
                       TextColor="{DynamicResource White}" />
            </VerticalStackLayout>

            <Label Grid.Column="1" Grid.Row="1"
                   Text="{Binding CostText}"
                   FontSize="12"
                   TextColor="{DynamicResource White}" />

            <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2" Spacing="2" HorizontalOptions="End">
                <Label Text="⟳" FontSize="24" TextColor="{Binding CoinsColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RefreshCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="{Binding AvailableCoinsText}"
                       FontSize="12"
                       HorizontalTextAlignment="End"
                       TextColor="{Binding CoinsColor}" />
            </VerticalStackLayout>
        </Grid>
    </Frame>
</ContentView>