<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:Vibik.Resources.Components"
             x:Class="Vibik.Resources.Components.TaskCard"
             x:Name="Root"
             x:DataType="components:TaskCard">

    <Frame BackgroundColor="{StaticResource MilkChocolate}"
           Padding="16"
           CornerRadius="11"
           HasShadow="False"
           HorizontalOptions="FillAndExpand">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnCardTapped"
                                  CommandParameter="{Binding Item, Source={x:Reference Root}}" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto,Auto"
              ColumnSpacing="14"
              RowSpacing="8">

            <!-- Иконка слева -->
            <Image Grid.RowSpan="2" Grid.Column="0"
                   WidthRequest="48" HeightRequest="48"
                   Aspect="AspectFit"
                   Source="{Binding IconSource, TargetNullValue=default_task_photo.svg}" />

            <!-- Заголовок и строчка «со старта прошло» -->
            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="4">
                <Label Text="{Binding Title}"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}" />
                <Label Text="{Binding DaysPassedText}"
                       FontSize="14"
                       TextColor="{StaticResource White}" />
            </VerticalStackLayout>

            <!-- Стоимость -->
            <Label Grid.Column="1" Grid.Row="1"
                   Text="{Binding CostText}"
                   FontSize="14"
                   TextColor="{StaticResource White}" />

            <!-- Кнопка свап и монеты -->
            <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2"
                                 Spacing="2"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center">
                <Label Text="⟳"
                       FontSize="24"
                       TextColor="{Binding CoinsColor}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RefreshCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <Label Text="{Binding AvailableCoinsText}"
                       FontSize="14"
                       HorizontalTextAlignment="End"
                       TextColor="{Binding CoinsColor}" />
            </VerticalStackLayout>
        </Grid>
    </Frame>
</ContentView>
