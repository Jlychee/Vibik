<?xml version="1.0" encoding="utf-8"?>
<ContentView
    x:Class="Vibik.Resources.Components.PhotoTile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Frame x:Name="RootFrame"
           Padding="0"
           CornerRadius="12"
           HasShadow="True"
           BackgroundColor="Transparent"
           Margin="0">

        <Grid>
            <!-- Фото -->
            <Grid x:Name="ImageRoot" IsVisible="True" ZIndex="1">
                <Image x:Name="ImageView"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Opacity="1" />
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped"/>
                </Grid.GestureRecognizers>
            </Grid>

            <!-- Плюс -->
            <Grid x:Name="AddRoot" IsVisible="False" ZIndex="0"
                  HorizontalOptions="Fill" VerticalOptions="Fill">
                <VerticalStackLayout Spacing="6"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Text="＋" FontSize="48" TextColor="{StaticResource MilkChocolate}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"/>
                    <Label Text="Добавить" FontSize="12" TextColor="{StaticResource MilkChocolate}"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped"/>
                </Grid.GestureRecognizers>
            </Grid>
        </Grid>
    </Frame>
</ContentView>