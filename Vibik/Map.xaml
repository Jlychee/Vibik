<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vibik.SecondPage"
             Title="Карта">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30,40">
            <Label Text="УРа это карта" 
                   FontSize="28"
                   TextColor="{StaticResource MilkChocolate}"
                   HorizontalOptions="Center" />
            
            <Image Source="dotnet_bot.png"
                   HeightRequest="200"
                   Aspect="AspectFit" />
            
            <Label Text="чето там..."
                   FontSize="16"
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center" />
            
            <Button Text="Вернуться назад" 
                    Clicked="OnBackClicked"
                    BackgroundColor="{StaticResource MilkChocolate}"
                    TextColor="{StaticResource White}"
                    HorizontalOptions="Center"
                    WidthRequest="200" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>